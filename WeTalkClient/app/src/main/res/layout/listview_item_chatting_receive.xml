<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="@drawable/shap">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:divider="@drawable/shap"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/chatting_receive_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/chatting_receive_msg"
            android:src="@drawable/photo_default" />

        <TextView
            android:id="@+id/chatting_receive_nikname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:layout_toRightOf="@+id/chatting_receive_photo"
            android:text="닉네임" />

        <TextView
            android:id="@+id/chatting_receive_msg"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chatting_receive_photo"
            android:layout_below="@+id/chatting_receive_nikname"
            android:layout_marginRight="5dp"
            android:background="@drawable/chatting_msg_receive"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="msg"
            android:textColor="@drawable/txt_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chatting_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chatting_receive_msg"
            android:layout_marginTop="22dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="시간" />
    </RelativeLayout>
</LinearLayout>